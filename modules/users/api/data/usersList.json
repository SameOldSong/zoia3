{
    "collection": "users",
    "schema": {
        "type": "object",
        "properties": {
            "page": {
                "type": "number",
                "minimum": 1,
                "maximum": 999999
            },
            "sortId": {
                "type": "string",
                "enum": ["username", "email"]
            },
            "sortDirection": {
                "type": "string",
                "enum": ["asc", "desc"]
            },
            "searchText": {
                "type": "string",
                "minLength": 0,
                "maxLength": 128
            }
        },
        "required": ["page", "sortId", "sortDirection"]
    },
    "projection": {
        "_id": 1,
        "username": 1,
        "email": 1,
        "active": 1
    },
    "search": ["username", "email"]
}
